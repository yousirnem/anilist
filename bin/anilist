#!/usr/bin/env bash
source "$HOME/.local/share/anilist/config.sh"

if [[ ! -f "$USER_FILE" ]]; then
  "$LIB_DIR/auth.sh"
fi

case "${1:-}" in
  auth)
	source "$LIB_DIR/auth.sh"
  ;;
  new)
  	source "$LIB_DIR/new.sh"
  ;;
  planning)
  	source "$LIB_DIR/planning.sh"
  ;;
  watching)
  	source "$LIB_DIR/watching.sh"
  ;;
  binge)
	source "$LIB_DIR/binge.sh"
  ;;
  score)
  source "$LIB_DIR/score.sh"
  ;;
  *)
	source "$LIB_DIR/default.sh"
  ;;
esac
